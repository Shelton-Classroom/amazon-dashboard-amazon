@model IEnumerable<AmazonModel.Expenses.ExpenseCapture>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Expenses/Views/Shared/_Expenses.cshtml";
}

<h2></h2>

<p>
    @Html.ActionLink("Add Expense", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExpenseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpenseAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MerchantId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpenseCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MerchantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseCode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ExpenseCaptureId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ExpenseCaptureId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ExpenseCaptureId })
            </td>
        </tr>
    }

</table>
